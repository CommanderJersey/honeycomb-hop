


function drawLevel()
		for i = 1 to 25
	    for j = 1 to 25
	        SetSpriteSize( sprite, 4, 4 )
	        SetSpritePosition( sprite , x#, y# )
	        SetSpriteColor( sprite, random(1,255), random(1,255), random(1,255), 255)
	        x# = x# + 4
	        // store the sprite image number in our map array
	        map[i,j] = image
	    next i
	    x# = 0
	    y# = y# + 4
	next j
endfunction
